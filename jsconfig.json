{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["src/*"],
      "test": ["src/test/*"],
      "src": ["src/*"],
      "infra": ["src/infra/*"],
      "config":["src/config/*"],
      "helpers": ["src/helpers/*"],
      "interfaces": ["src/interfaces/*"],
      "startup": ["src/startup/*"],
      "routes": ["src/interfaces/http/routes/*"],
      "controllers": ["src/interfaces/http/controllers/*"],
      "middleware": ["src/interfaces/http/middleware/*"],
      "errors": ["src/interfaces/http/errors"]
    }
  },
  "exclude": ["node_modules", "**/node_modules/*", "dist", "doc", "client"]
}
